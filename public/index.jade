        jQuery.post("/create", {
          "thankyou": $("#thanks").val()
        }, function(){
          $this.addClass( "btn-success" ).val( "Tallennettu :)" );
        }).fail(function(){
          $this.addClass( "btn-danger" ).val( "Ep√§onnistui D:" );
        });

      });
    });

